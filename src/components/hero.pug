include ../mixins.pug

section.hero
  .container.hero__wrapper
    .hero__nav.page-header
      a.page-header__logo-link(href="#") XeniaWeb
      .page-header__main-nav
        ul.main-nav
          include ../var
            each item in mainMenu
              li.main-nav__item
                a(href=`#${item.path}`) #{item.text}
      .page-header__social
        ul.social
          include ../var
            each item in socialList
              li.social__item
                a(href=item.path target="_blank").social__link
                  span.visually-hidden Я в #{item.net}
                  +icon(item.icon, "social__icon", 30, 30)
    .hero__title
      .long-title
        p.long-title__desc Личный сайт <br> веб-разработчика
        h1.long-title__name Xenia Bürki
    .hero__btn
      button.scroll-btn() Скролл
      +icon("scroll", "scroll-btn__icon", 30, 30)
