include ../mixins.pug

section#skills.skills
  section.triangles.skills__triangles
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
      polygon(points="0,0 0,100 1000,100")
    svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__item.triangle
      polygon(points="1000,0 1000,100 0,100")
  .container.skills__wrapper
    .skills__container
      .skills__title-block
        h2.skills__title.section-title.section-title--small Чем я могу быть полезна вам
        .skills__description
          p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
      .skills__values
        ul.user-skills
          include ../var.pug
            each item in skillValue
              li.user-skills__item.skills-group
                h3.skills-group__title #{item[0]}
                ul.skills-group__list
                    each skill in item[1]
                      li.skills-group__item
                        .skill
                          svg.skill__shape(viewBox="0 0 200 200" width="200" height="200" preserveAspectRatio="none")
                            defs
                              linearGradient#skill__gradient(x1="0" y1="50%" x2="100%" y2="50%")
                                stop(offset="40%" stop-color="#5500f2")
                                stop(offset="100%" stop-color="#ad00ed")
                            circle.skill__circle.skill__circle--down(r="68" cx="100" cy="100")
                            circle.skill__circle.skill__circle--up(r="68" cx="100" cy="100" stroke="url(#skill__gadient)" transform="rotate(180 100 100)" style=`animation-delay: ${skill[1]}`)
                          .skill__title #{skill[0]}
    .skills__picture
        picture
          source
          +image("backpack_desktopHd@1x.png", "skills__image", "Photo backpack", 712, 627)
