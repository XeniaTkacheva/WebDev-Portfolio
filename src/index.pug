include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
    link(rel="stylesheet" href="css/style.css")

  body
    .wrapper
      header.page-header#home
        .page-header__wrapper
          a.hage-header__logo-link(href="#") XW
          ul.page-header__main-nav.main-nav
            include variables.pug
              each item in mainMenu
                li.main-nav__item
                  a(href=`#${item.path}`) #{item.text}
          ul.page-header__social.social
            include var-social.pug
              each itemso in socialList
                li.social__item
                  a(href=itemso.path class="social__link visually-hidden")
                    +icon(itemso.icon, "social__icon")

section#about.about-section
section#skills.skills-section
section#works.works-section
section#reviews.reviews-section
footer#connect.page-footer