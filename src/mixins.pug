mixin icon(name, className, width, height)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className width=width height=height viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className, alt, width, height)
  img(src=require(`images/content/${path}`) class=className alt=alt width=width height=height)

mixin pictureone(path, className, alt, width, height, jpeg)
  picture
    source(media='(max-width: 480px)', srcset=require(`images/content/${path}-mobile@1x.jpg 1x, images/content/${path}-mobile@2x.jpg 1x`))
    source(media='(max-width: 768px)', srcset=require(`images/content/${path}--tablet@1x.jpg 1x, images/content/${path}-tablet@2x.jpg 2x`))
    source(media='(max-width: 1200px)', srcset=require(`images/content/3.jpg`))
    img(src=require(`images/content/4.jpg`) srcset=require(` images/content/${path}-tablet@2x.jpg 2x`) class=className alt=alt width=width height=height)

mixin pictureMobileFirst
  picture
    source(media='(min-width: 1800px)', srcset=require(`images/content/4.jpg`))
    source(media='(min-width: 1200px)', srcset=require(`images/content/3.jpg`))
    source(media='(min-width: 768px)', srcset=require(`images/content/2.jpg`))
    img(src=require(`images/content/1.jpg`) width=320 height=180 alt="Привет малышка!")
