.arrow {
  position: absolute;
  display: block;
  top: 50%;
  left: 50%;
  width: 10px;
  height: 10px;
  cursor: inherit;

  &--forward {
    transform: translate(-50%, -50%);
  }

  &--back {
    transform: translate(-50%, -50%) rotate(180deg);
  }

  &--up {
    transform: translate(-50%, -50%) rotate(-90deg);
  }

  &--down {
    transform: translate(-50%, -50%) rotate(90deg);
  }
}
