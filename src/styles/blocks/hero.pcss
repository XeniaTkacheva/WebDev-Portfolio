.hero__wrapper {
  width: 1480px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
  padding: 0 0 50px;
}

.hero__title {
  display: block;
  text-align: center;
  padding: 15% 0 10%;
}

.hero__btn {
  display: flex;
  justify-content: center;
  margin-top: auto;
}

