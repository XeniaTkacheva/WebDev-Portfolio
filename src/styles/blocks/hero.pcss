.hero__wrapper {
  width: 1500px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
  padding: 0 0 20px;
}

.hero__title {
  display: block;
  text-align: center;
  padding: 150px 0;
}

.hero__btn {
  display: flex;
  justify-content: center;
  margin-top: auto;
}