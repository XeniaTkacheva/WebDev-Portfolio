.ref-slider__nav {
  display: flex;
  justify-content: space-between;
  margin-right: auto;
}

.ref-slider__nav-btn {
  display: block;
  width: 50px;
  height: 50px;
  position: relative;

  border: 1px solid $text-color;
  border-radius: 50%;
  background: transparent;


  &:hover,
  &:focus {
    background: rgba($color-indigo, 0.05);
    border-color: $color-indigo;
    fill: $color-indigo;
  }

  &:active {
    opacity: 0.5;
  }
}