.reviews {
  position: relative;
}

.reviews__wrapper {
  width: 1480px;
  min-height: 60vh;
  padding: 200px 0;
}

.reviews__title {
  padding: 20px 0 50px;
}

.reviews__slider {
  display: flex;
  width: 70%;
  position: relative;
}

.reviews__cards {
  display: flex;
}

.reviews__item {
  width: 50%;
  padding-left: 100px;
}

.reviews__nav {
  justify-content: space-between;
  position: absolute;
  top: -100px;
  left: 50%;
  min-width: 130px;
}