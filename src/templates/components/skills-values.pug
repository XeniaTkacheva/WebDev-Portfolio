script(type="text/x-template")#skills-list.skills-list
  ul.user-skills.skills__values
    li.user-skills__item(v-for="category in skills" :key="category.title")
      skills-group(:category="category")

script(type="text/x-template")#skills-group
  .skills-group
    h3.skills-group__title {{ category.title }}
    ul.skills-group__list
      li.skills-group__item(v-for="skill in category.skills" :key="skill.id")
        skill(:skill="skill")

script(type="text/x-template")#skill
  .skill
    svg.skill__shape(viewBox="0 0 160 160" width="160" height="160" preserveAspectRatio="none")
      defs
        linearGradient#skill__gradient(x1="0" y1="50%" x2="100%" y2="50%")
          stop(offset="40%" stop-color="#5500f2")
          stop(offset="100%" stop-color="#ad00ed")
      circle.skill__circle.skill__circle--down(r="68" cx="80" cy="80")
      circle.skill__circle.skill__circle--up(r="68" cx="80" cy="80" ref="circle" stroke="url(#skill__gadient)" transform="rotate(180 80 80)"  )
    .skill__title {{ skill.title}}
